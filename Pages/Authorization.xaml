<Page x:Class="shop.Pages.Authorization"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:local="clr-namespace:shop.Pages"
  mc:Ignorable="d" 
  d:DesignHeight="350" d:DesignWidth="800"
  Title="Autorization">

    <Grid HorizontalAlignment="Center" Width="780" Background="#FFFAE8E8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="155*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="TBLogin" HorizontalAlignment="Center" Margin="0,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" RenderTransformOrigin="0.5,0.5" Height="24" SelectionBrush="#FF780404" Grid.Column="1">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.135"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.001"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBlock HorizontalAlignment="Center" Margin="0,112,0,0" TextWrapping="Wrap" Text="Введите логин" VerticalAlignment="Top" Width="220" Foreground="#FF780404" Height="19" FontWeight="Bold" Grid.Column="1"/>
        <PasswordBox x:Name="PBPassword" HorizontalAlignment="Center" Margin="0,183,0,0" VerticalAlignment="Top" Width="220" Height="24" SelectionBrush="#FF780404" Grid.Column="1"/>
        <Button x:Name="ButtonVhod" HorizontalAlignment="Center" Margin="0,213,0,0" VerticalAlignment="Top" Width="220" Content="Войти" Height="23" Click="Button_Click_1" BorderBrush="#FF780404" Foreground="#FF780404" Background="#FFFAE8E8" Grid.Column="1"/>
        <Button x:Name="ButtonRegistr" Content="Регистрация" HorizontalAlignment="Center" Margin="0,241,0,0" VerticalAlignment="Top" Width="220" Height="24" Click="ButtonRegistr_Click" Foreground="#FF780404" BorderBrush="#FF780404" Background="#FFFAE8E8" Grid.Column="1"/>
        <TextBlock Margin="0,67,0,0" Text="Авторизация" VerticalAlignment="Top" Width="220" Foreground="#FF780404" FontSize="18" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Height="28" FontWeight="Bold" FontFamily="Modern No. 20" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,158,0,0" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Top" Width="220" Foreground="#FF780404" Height="19" FontWeight="Bold" Grid.Column="1"/>

    </Grid>
</Page>
