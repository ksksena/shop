<Page x:Class="shop.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:shop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      Title="Registration" Width="228">

    <Grid Tag="" Background="#FFFAE8E8" Margin="-367,0,-278,0" RenderTransformOrigin="0.435,0.498">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="272*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="559*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="34,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF780404" FontWeight="Bold" Grid.Column="2"><Run Text="Введите "/><Run Language="ru-ru" Text="ФИО"/><Run Text=":"/></TextBlock>
        <TextBox x:Name="TBName" HorizontalAlignment="Left" Margin="34,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Grid.Column="2" SelectionBrush="#FF780404"/>
        <TextBlock HorizontalAlignment="Left" Margin="34,93,0,0" TextWrapping="Wrap" Text="Введите логин:" VerticalAlignment="Top" Foreground="#FF780404" FontWeight="Bold" Grid.Column="2"/>
        <TextBox x:Name="TBLogin" HorizontalAlignment="Left" Margin="34,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Grid.Column="2" SelectionBrush="#FF780404"/>
        <TextBlock HorizontalAlignment="Left" Margin="34,224,0,0" TextWrapping="Wrap" Text="Введите почту:" VerticalAlignment="Top" Foreground="#FF780404" FontWeight="Bold" Grid.Column="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="34,268,0,0" TextWrapping="Wrap" Text="Введите телефон:" VerticalAlignment="Top" Foreground="#FF780404" FontWeight="Bold" Grid.Column="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="34,137,0,0" TextWrapping="Wrap" Text="Введите пароль:" VerticalAlignment="Top" Foreground="#FF780404" FontWeight="Bold" Grid.Column="2"/>
        <PasswordBox x:Name="PBpassword" HorizontalAlignment="Left" Margin="34,201,0,0" VerticalAlignment="Top" Width="204" Password="" PasswordChanged="PasswordBox_PasswordChanged" Grid.Column="2" SelectionBrush="#FF780404"/>
        <TextBlock HorizontalAlignment="Left" Margin="34,181,0,0" TextWrapping="Wrap" Text="Введите пароль повторно:" VerticalAlignment="Top" Foreground="#FF780404" FontWeight="Bold" Grid.Column="2"/>
        <Button x:Name="ButtonRegist" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="34,312,0,0" VerticalAlignment="Top" Width="204" Click="ButtonRegist_Click" BorderBrush="#FF780404" Foreground="#FF780404" Grid.Column="2" Background="#FFFAE8E8"/>
        <TextBox x:Name="TBEmail" HorizontalAlignment="Left" Margin="34,246,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="18" Grid.Column="2" SelectionBrush="#FF780404"/>
        <TextBox x:Name="TBTelephone" HorizontalAlignment="Left" Margin="34,290,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="18" Grid.Column="2" SelectionBrush="#FF780404"/>
        <Button x:Name="ButtonExit" Content="Назад" HorizontalAlignment="Left" Margin="34,338,0,0" VerticalAlignment="Top" Width="204" Click="ButtonExit_Click" BorderBrush="#FF780404" Foreground="#FF780404" Grid.Column="2" Background="#FFFAE8E8"/>
        <TextBlock Margin="76,20,0,0" Text="Регистрация" VerticalAlignment="Top" Width="120" Foreground="#FF780404" FontSize="18" HorizontalAlignment="Left" TextWrapping="Wrap" TextAlignment="Center" Height="24" FontWeight="Bold" Grid.Column="2"/>
        <TextBox x:Name="TBPassword" HorizontalAlignment="Left" Margin="34,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Grid.Column="2" SelectionBrush="#FF780404"/>

    </Grid>
</Page>
